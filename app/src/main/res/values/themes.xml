<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Rimuo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/MidnightBlue</item>
        <item name="colorPrimaryVariant">@color/article_title</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/MediumBlue</item>
        <item name="colorSecondaryVariant">@color/Teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/article_title</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/MidnightBlue</item>
        <item name="colorPrimaryVariant">@color/article_title</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/MediumBlue</item>
        <item name="colorSecondaryVariant">@color/Teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/article_title</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TodoSubtitle">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/LightGrey</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">25dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0.105</item>
    </style>

    <style name="ReciclerViewTodo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--Dialog of TodoAPP-->

    <style name="button_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:hint">@string/add_task</item>
    </style>

    <style name="radio_button_dialog_todo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textSize">
        <item name="android:textSize">188sp</item>
    </style>

    <style name="Theme.Rimuo" parent="Base.Theme.Rimuo" />

    <!--SearchViewStyle-->

    <style name="searchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:colorBackgroundCacheHint">@color/Crimson</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:goIcon">@color/Crimson</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/Crimson</item>
    </style>
</resources>